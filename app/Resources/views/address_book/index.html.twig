{% extends 'base.html.twig' %}
{% block body %}
    <div class="wrapper">
        <div class="container">
            <div class="text-center p-5">
                <div class="h3"><span>Welcome to <span class="text-danger">AddressBook</span> in</span>
                    Symfony {{ constant('Symfony\\Component\\HttpKernel\\Kernel::VERSION') }}</div>
            </div>
            <div style="padding-bottom: 10px">
                <div class="success">
                    {% for message in app.flashes('success') %}
                        <div style="color: green">
                            {{ message }}
                        </div>
                    {% endfor %}
                </div>
                <div id="errors">
                    {% for message in app.flashes('errors') %}
                        <div style="color: red">
                            {{ message }}
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div id="tabs">
                <ul>
                    <li><a href="#tabs-1">Display contacts</a></li>
                    <li><a href="#tabs-2">Add new contact <i class="glyphicon glyphicon-plus"></i> </a></li>
                </ul>
                <div id="tabs-1">
                    <div>
                        {% include "address_book/partial/list.html.twig" %}
                    </div>
                </div>
                <div id="tabs-2">
                    <div>
                        {% include "address_book/partial/form.html.twig" %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(function () {
            $("#tabs").tabs().addClass("ui-helper-clearfix");
            $("#tabs li").removeClass("ui-corner-top").addClass("ui-corner-left");
        });
    </script>
{% endblock %}
